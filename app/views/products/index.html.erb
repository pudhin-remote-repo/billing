<p id="notice"><%= notice %></p>

<h1>Products</h1>
<%= link_to 'New Product', new_product_path, class: 'my-button', style: 'text-decoration: none' %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Tax</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td style="text-align: left"><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.tax %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Billing section', root_path %>